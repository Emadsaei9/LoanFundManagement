{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information",
            "Microsoft.AspNetCore": "Debug" // سطح لاگ را برای درخواست‌های ASP.NET Core تنظیم می‌کنیم.
        },
        "File": {
            "Path": "Logs/log.txt", // فایل لاگ به صورت محلی ذخیره می‌شود.
            "RollingInterval": "Day" // فایل لاگ روزانه بازنشانی می‌شود.
        }
    },
    "AllowedHosts": "*"
}
